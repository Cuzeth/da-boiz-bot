{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["esnext"],
		"moduleResolution": "node",
		"module": "commonjs",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules/"]
}